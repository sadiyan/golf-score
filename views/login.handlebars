<div class="row">
  <div class="col-md-6">
    <h2 style="border-bottom: 2px #076652 solid; width:60%">Login</h2>

    <form class="form login-form">
      <div class="form-group">
        <label for="email-login">email:</label>
        <input class="form-input" type="text" id="email-login" style="width: 50%;"/>
      </div>
      <div class="form-group">
        <label for="password-login">password:</label>
        <input class="form-input" type="password" id="password-login" style="width: 50%;"/>
      </div>
      <div class="form-group">
        <button class="log-sign btn btn-primary" type="submit">login</button>
      </div>
    </form>
  </div>
  <div class="col-md-6">
    <h2 style="border-bottom: 2px #076652 solid;  width:60%">Signup</h2>

    <form class="form signup-form">
      <div class="form-group">
        <label for="name-signup">name:</label>
        <input class="form-input" type="text" id="name-signup" style="width: 50%;"/>
      </div>
      <div class="form-group">
        <label for="email-signup">email:</label>
        <input class="form-input" type="text" id="email-signup" style="width: 50%;"/>
      </div>
      <div class="form-group">
        <label for="password-signup">password:</label>
        <input class="form-input" type="password" id="password-signup" style="width: 50%;"/>
      </div>
      <div class="form-group">
        <button class="log-sign btn btn-primary" type="submit">signup</button>
      </div>
    </form>
  </div>
</div>

<script src="/js/login.js"></script>
