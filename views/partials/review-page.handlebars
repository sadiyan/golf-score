{{#each courses as |course|}}
    <div style="border: 2px #076652 solid; background-image: url('https://media.istockphoto.com/vectors/abstract-white-background-geometric-texture-vector-id954565408?b=1&k=20&m=954565408&s=170667a&w=0&h=6IG6ZuQI7FdXbEFXtEbHhY3BfBSu2_aRYTB_r6Oz-qc=');">
        Course: {{name}}
        <br>
        Par: {{par}}
        <br>
    </div>
    {{#each reviews as |review|}}
        <div style="margin-bottom:25px; border: 2px #076652 solid; background-image: url('https://media.istockphoto.com/vectors/abstract-white-background-geometric-texture-vector-id954565408?b=1&k=20&m=954565408&s=170667a&w=0&h=6IG6ZuQI7FdXbEFXtEbHhY3BfBSu2_aRYTB_r6Oz-qc=');">
            Comment: {{comment}} - {{course.user.username}} 
            <br>
            Date Created: {{format_date createdDate}}
            <br>
            Rating: {{rating}}
            <br>
        </div>
    {{/each}}
{{/each}}
